<Window x:Class="CaixaEletronico.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaixaEletronico.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">

            <Label Content="Digite o valor em R$:" VerticalAlignment="Center" FontSize="16" Margin="0,0,0
            ,0"/>
            
            <TextBox  x:Name="txtDinheiro" Width="150" Height="30" FontSize="16" />
            
            <Button x:Name="btnSacar" Content="Sacar" Width="80" Height="35" Margin="10,0,0,0" />
        </StackPanel>
        
        <StackPanel x:Name="SpOpcoesSaque" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,20" >
            
        </StackPanel>
    </Grid>
</Window>
